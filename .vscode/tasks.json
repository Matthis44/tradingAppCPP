{
	"version": "2.0.0",
	"tasks": [
	  {
		"label": "Build Active File with g++-13",
		"type": "shell",
		"command": "/usr/bin/g++-13",
		"args": [
		  "-std=c++20",
		  "-g",
		  "${file}",
		  "-o",
		  "${fileDirname}/${fileBasenameNoExtension}"
		],
		"group": {
		  "kind": "build",
		  "isDefault": true
		},
		"problemMatcher": ["$gcc"]
	  }
	]
  }
  